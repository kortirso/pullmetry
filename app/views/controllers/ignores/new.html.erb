<%= render PageWrappers::UserComponent.new do %>
  <h1 class="mb-8">New ignore</h1>
  <section class="inline-block p-4 bg-white rounded border border-stone-200">
    <%= form_with model: @ignore, url: company_ignores_path(@company.uuid), method: :post, class: 'form-block' do |form| %>
      <div class="form-field">
        <%= form.label :entity_value, 'Entity', class: 'form-label' %>
        <%= form.text_field :entity_value, required: true, class: 'form-value' %>
      </div>
      <%= form.submit 'Save ignore', class: 'btn-primary' %>
    <% end %>
  </section>
<% end %>
